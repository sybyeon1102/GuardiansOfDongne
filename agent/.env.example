# 추론 서버
INFERENCE_SERVER_URL=

# 에이전트가 읽을 영상/카메라 소스들
# - 개발: H.264 mp4 파일
# - 나중: rtsp://... 주소들
AGENT_SOURCES=videos/cam01.mp4,videos/cam02.mp4

# 각 소스에 대응하는 camera_id
AGENT_CAMERA_IDS=cam01,cam02

# Mediapipe / 윈도우 설정 (legacy realtime_client의 기본값과 동일)
AGENT_WINDOW_SIZE=16
AGENT_STRIDE=4
AGENT_RESIZE_WIDTH=640

# 프레임 스킵 (1이면 매 프레임 처리, 2면 2프레임에 1번 Pose)
AGENT_FRAME_SKIP=1

# HLS 세그먼트가 저장될 루트 디렉터리
# FastAPI에서 /hls 경로로 서빙됨
AGENT_HLS_ROOT=./hls
