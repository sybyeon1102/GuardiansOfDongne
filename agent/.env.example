# ==== Agent identity ====
# 이 에이전트 인스턴스를 대표하는 ID (DB agents.code 와 매칭)
AGENT_CODE=agent-main-building-01

# 추론 서버(FastAPI) base URL
INFERENCE_SERVER_URL=http://localhost:8000

# 카카오 액세스 토큰 (없으면 비워두고, 있는 점포만 채우기)
KAKAO_ACCESS_TOKEN=__PUT_YOUR_KAKAO_ACCESS_TOKEN_HERE__


# ==== Camera config ====
# cameras.json 위치 (agent 기준 상대 경로 or 절대 경로)
CAMERA_CONFIG_PATH=./config/cameras.json


# ==== Streaming (MJPEG / HLS) ====
# 에이전트가 띄우는 HTTP 서버 host/port
STREAM_HTTP_HOST=0.0.0.0
STREAM_HTTP_PORT=8001

# UI용 MJPEG 스트림 on/off
MJPEG_ENABLED=true

# HLS 파이프라인 on/off (코드는 유지, 기본은 false)
HLS_ENABLED=false
HLS_OUTPUT_DIR=./hls
HLS_BASE_PATH=/streams


# ==== Pose window (Mediapipe → /behavior/analyze_pose) ====
# 윈도우당 프레임 수 T (예: 30fps 기준 1초)
POSE_WINDOW_SIZE=30

# 윈도우 stride (예: 15 → 0–29, 15–44, 30–59 ...)
POSE_WINDOW_STRIDE=15

# Pose 추출 상한 fps (입력이 더 높아도 여기까지만 처리)
POSE_MAX_FPS=30


# ==== Tracking (YOLO / DeepSort용 프레임 샘플링) ====
# 카메라별 tracking_send_fps가 없을 때 쓸 기본값
TRACKING_SEND_FPS_DEFAULT=10

# 트래킹용 프레임 해상도 정책: none | half
#  - none: 원본 해상도 그대로
#  - half: 가로/세로 1/2 (정수 기반 다운샘플링만 사용)
TRACKING_DOWNSCALE_MODE=half


# ==== Logging / HTTP ====
LOG_LEVEL=INFO
REQUEST_TIMEOUT_SEC=5
